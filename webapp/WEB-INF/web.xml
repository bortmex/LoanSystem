<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>LoanSystem</display-name>
    
    <servlet>
        <servlet-name>clientServlet</servlet-name>
        <servlet-class>ru.javaproject.web.ClientServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>clientServlet</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>partnerServlet</servlet-name>
        <servlet-class>ru.javaproject.web.PartnerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>partnerServlet</servlet-name>
        <url-pattern>/partner</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>representativeServlet</servlet-name>
        <servlet-class>ru.javaproject.web.RepresentativeServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>representativeServlet</servlet-name>
        <url-pattern>/representative</url-pattern>
    </servlet-mapping>
</web-app>